@model DA_Web.Models.DanhSachPhat

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4 style="text-align:center">Albums</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label for="imageFile">Chọn tệp ảnh</label>
                <input type="file" id="imageFile" name="imageFile" accept="image/*" class="form-control" required />
            </div>
            <div class="form-group mt-3">
                <label asp-for="NgheSiId" class="control-label">Nghệ sĩ</label>
                <select asp-for="NgheSiId" class ="form-control" asp-items="ViewBag.NgheSiId"></select>
            </div>
            <div class="form-group mt-3 mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
