@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="Sign">
    <div class="Signin">
        <section>
            <form id="account" method="post">
                <h2>Use a local account to log in.</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="inform">
                    <div class="form-floatings">
                        <label asp-for="Input.UserNameOrEmail" class="form-labell">Username or Email:</label>
                        <input asp-for="Input.UserNameOrEmail" class="form-controll" autocomplete="username" aria-required="true" placeholder="Your username or email" />
                        <span asp-validation-for="Input.UserNameOrEmail" class="text-danger"></span>
                    </div>
                </div>
                <div class="inform">
                    <div class="form-floatings">
                        <label asp-for="Input.Password" class="form-labell">Password:</label>
                        <input asp-for="Input.Password" class="form-controll" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div>
                    <label asp-for="Input.RememberMe" class="form-labell">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="buttons art bb ma">Log in</button>
                </div>
                <div class="fix-a">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="lotties">
        <dotlottie-player src="https://lottie.host/f324fecd-638c-49f7-b94e-002fcae6926b/I3DnsMprGC.json" background="transparent" speed="1" style="width: 300px; height: 300px;" loop autoplay></dotlottie-player>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
