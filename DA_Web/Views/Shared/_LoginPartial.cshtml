@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    
    <div class="profile">
        <a id="manage" class="" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hi! @UserManager.GetUserName(User)</a>
    </div>
}
else
{
    <div class="Login-status">
        <div class="">
            <a class="" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </div>
        <div class="">
            <a class="" id="login" asp-area="Identity" asp-page="/Account/Login">|</a>
        </div>
        <div class="">
            <a class="" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </div>
    </div>
}

